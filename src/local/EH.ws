	function ACS_Darkness()
	{
		if (ACS_IsInDarkPlace())
		{
			if ( FactsQuerySum("ACS_DarkPlaceEnv") <= 0 )
			{
				//Activate_DarkplaceDarkness();

				FactsAdd("ACS_DarkPlaceEnv", 1, -1);
			}
		}
		else
		{
			if (FactsQuerySum("ACS_DarkPlaceEnv") > 0)
			{
				//Deactivate_DarkplaceDarkness();

				FactsRemove("ACS_DarkPlaceEnv");
			}

			if (ACS_IsNight_Adjustable())
			{
				if ( FactsQuerySum("ACS_Darkness_Upon_Us") <= 0 )
				{
					Activate_Darkness();

					if (ACS_SpiralSkyStars_Enabled())
					{
						ACSGetCEntity('acs_spiral_star_entity').PlayEffectSingle('stars');
					}

					if (ACS_SpiralSkyPlanets_Enabled())
					{
						ACSGetCEntity('acs_spiral_entity').PlayEffectSingle('spiral_sky_original_second_moon');
					}

					FactsAdd("ACS_Darkness_Upon_Us", 1, -1);
				}
			}
			else
			{
				if (FactsQuerySum("ACS_Darkness_Upon_Us") > 0)
				{
					Deactivate_Darkness();

					ACSGetCEntity('acs_spiral_star_entity').StopEffect('stars');

					ACSGetCEntity('acs_spiral_entity').DestroyEffect('spiral_sky_original_second_moon');

					FactsRemove("ACS_Darkness_Upon_Us");
				}
			}
		}
		

		ACS_Darkness_Menu_Switch();
	}

