	var pLean : EulerAngles;

	function Motion_Leaning()
	{
		var cam_direction, lean_roll_modifier : float;

		if (theGame.IsDialogOrCutscenePlaying() 
		|| thePlayer.IsInNonGameplayCutscene() 
		|| thePlayer.IsInGameplayScene() 
		|| theGame.IsCurrentlyPlayingNonGameplayScene()
		|| theGame.IsFading()
		|| theGame.IsBlackscreen()
		|| theGame.IsPaused() 
		|| !ACS_Motion_Leaning_Enabled()
		|| thePlayer.HasTag('acs_in_wraith')
		|| FactsQuerySum("ACS_Is_Gliding") > 0
		|| ACS_New_Replacers_Female_Active()
		) 
		{
			if (FactsQuerySum("ACS_Motion_Leaning_Active") > 0)
			{
				((CMovingPhysicalAgentComponent)(thePlayer.GetMovingAgentComponent())).SetRotation(EulerAngles(0, 0, 0));

				FactsRemove("ACS_Motion_Leaning_Active");
			}

			if (FactsQuerySum("ACS_Motion_Leaning_Reset") > 0)
			{
				FactsRemove("ACS_Motion_Leaning_Reset");
			}

			return;
		}

		if ( thePlayer.IsPCModeEnabled() )
		{
			cam_direction = theInput.GetActionValue( 'GI_MouseDampX' );
		}
		else
		{
			cam_direction = theInput.GetActionValue( 'GI_AxisRightX' );
		}

		if (((CMovingPhysicalAgentComponent)(thePlayer.GetMovingAgentComponent())).GetSlopePitch() > 30)
		{
			lean_roll_modifier = 0.5f;
		}
		else
		{
			lean_roll_modifier = 0.25f;
		}

		if (thePlayer.IsUsingHorse() 
		|| thePlayer.IsUsingVehicle()
		|| thePlayer.IsSwimming()
		|| thePlayer.IsDiving()
		|| thePlayer.IsInCombat()
		|| thePlayer.IsThreatened()
		|| !BruxaBiteCheck()
		|| !ACS_CombatToExplorationCheck()
		|| thePlayer.GetCurrentStateName() == 'MountTheVehicle'
		|| thePlayer.GetCurrentStateName() == 'ApproachTheVehicle'
		|| theGame.GetInteractionsManager().GetActiveInteraction()
		)
		{
