								animatedComponentA.PlaySlotAnimationAsync ( fear_anim_names[RandRange(fear_anim_names.Size())], 'NPC_ANIM_SLOT', SAnimatedComponentSlotAnimationSettings(1.f, 1.f));
							}
							else
							{
								fear_anim_names.Clear();

