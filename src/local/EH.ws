			thePlayer.AddBuffImmunity(EET_SlowdownFrost , 'ACS_WH_Armor_Buff', true);
			thePlayer.AddBuffImmunity(EET_Snowstorm , 'ACS_WH_Armor_Buff', true);
			thePlayer.AddBuffImmunity(EET_SnowstormQ403 , 'ACS_WH_Armor_Buff', true);

