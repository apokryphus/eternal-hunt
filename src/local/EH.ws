	function FocusModeCustomCamera()
	{
		var template	: CEntityTemplate;
		var ent			: CEntity;

		CamerasDestroy();

		template = (CEntityTemplate)LoadResource("dlc\dlc_acs\data\entities\other\focus_mode_camera.w2ent", true);

