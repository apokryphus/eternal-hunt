	function sorcfxspawn( fxtag : name )
	{
		var temp															: CEntityTemplate;
		var ent																: CACSSorcFistAttacks;	
		var adjustedRot														: EulerAngles;
		var adjustedPos														: Vector;
		var actortarget														: CActor;
		var entities 														: array<CEntity>;
		var i																: int;
	
		entities.Clear();

		theGame.GetEntitiesByTag( 'ACS_Sorc_Attack', entities );	
		
		for( i = 0; i < entities.Size(); i += 1 )
		{
			entities[i].Destroy();
		}

		temp = (CEntityTemplate)LoadResource( 

		"dlc\dlc_acs\data\entities\other\acs_sorc_fist_attacks.w2ent"
			
		, true );

		if (thePlayer.IsInCombat())
		{
			if (thePlayer.GetTarget())
			{
				actortarget = (CActor)thePlayer.GetTarget();

				adjustedPos = actortarget.GetWorldPosition();
			}
			else
			{
				adjustedPos = thePlayer.GetWorldPosition() + thePlayer.GetWorldForward() * 10;
			}
		}
		else
		{
			adjustedPos = thePlayer.GetWorldPosition() + thePlayer.GetWorldForward() * 10;
		}

		adjustedPos.Z += 1.25;

		adjustedRot = thePlayer.GetWorldRotation();
		
		ent = (CACSSorcFistAttacks)theGame.CreateEntity( temp, adjustedPos, adjustedRot );

		ent.AddTag(fxtag);

		ent.AddTag('ACS_Sorc_Attack');

		ent.DestroyAfter(7);
	}
	
	
	
