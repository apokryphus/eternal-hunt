	function ClawFistLightAttack()
	{
		if (ACS_New_Replacers_Female_Active() || thePlayer.IsCiri())
		{
			ACS_Setup_Light_Attack_Internal();
			return;
		}

		if (CiriCheck() 
		&& FinisherCheck()
		&& CrossbowCheck()
		&& ACS_BuffCheck()
		&& WraithModeCheck() 
		&& BruxaBiteCheck()
		&& HitAnimCheck())
		{
			DeactivateThings();

