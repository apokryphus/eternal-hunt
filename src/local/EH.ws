	function HudModulesAutoHide()
	{
		var hud 															: CR4ScriptedHud;
		var hudWolfHeadModule 												: CR4HudModuleWolfHead;	
		var hudItemModule 													: CR4HudModuleItemInfo;	
		var moduleMinimap, moduleQuest, moduleControls, moduleBuffs 		: CR4HudModuleBase;

		hud = (CR4ScriptedHud)theGame.GetHud();

		moduleMinimap = (CR4HudModuleBase)hud.GetHudModule("Minimap2Module");

		moduleQuest = (CR4HudModuleBase)hud.GetHudModule("QuestsModule");

		moduleControls = (CR4HudModuleBase)hud.GetHudModule("ControlsFeedbackModule");

		moduleBuffs = (CR4HudModuleBase)hud.GetHudModule("BuffsModule");

		hudWolfHeadModule = (CR4HudModuleWolfHead)hud.GetHudModule( "WolfHeadModule" );

		hudItemModule = (CR4HudModuleItemInfo)hud.GetHudModule("ItemInfoModule");

		if (!hud)
		{
			if (FactsQuerySum("ACS_Minimap_Module_Hide") > 0)
			{
				FactsRemove("ACS_Minimap_Module_Hide");
			}

			if (FactsQuerySum("ACS_Quest_Module_Hide") > 0)
			{
				FactsRemove("ACS_Quest_Module_Hide");
			}

			if (FactsQuerySum("ACS_Control_Hint_Module_Hide") > 0)
			{
				FactsRemove("ACS_Control_Hint_Module_Hide");
			}

			if (FactsQuerySum("ACS_Buffs_Module_Hide") > 0)
			{
				FactsRemove("ACS_Buffs_Module_Hide");
			}

			if (FactsQuerySum("ACS_WolfHeadHud_Module_Hide") > 0)
			{
				FactsRemove("ACS_WolfHeadHud_Module_Hide");
			}

			if (FactsQuerySum("ACS_ItemHud_Module_Hide") > 0)
			{
				FactsRemove("ACS_ItemHud_Module_Hide");
			}

			if ( FactsQuerySum("ACS_Minimap_Module_Hide") <= 0 )
			{
				RemoveTimer('MinimapModuleDespawnDelay');
				AddTimer('MinimapModuleDespawnDelay', ACS_Hud_Elements_Despawn_Delay(), false);

				FactsAdd("ACS_Minimap_Module_Hide", 1, -1);
			}

			if ( FactsQuerySum("ACS_Quest_Module_Hide") <= 0 )
			{
				RemoveTimer('QuestModuleDespawnDelay');
				AddTimer('QuestModuleDespawnDelay', ACS_Hud_Elements_Despawn_Delay(), false);

				FactsAdd("ACS_Quest_Module_Hide", 1, -1);
			}

			if ( FactsQuerySum("ACS_Control_Hint_Module_Hide") <= 0 )
			{
				RemoveTimer('ControlHintModuleDespawnDelay');
				AddTimer('ControlHintModuleDespawnDelay', ACS_Hud_Elements_Despawn_Delay(), false);

				FactsAdd("ACS_Control_Hint_Module_Hide", 1, -1);
			}

			if ( FactsQuerySum("ACS_Buffs_Module_Hide") <= 0 )
			{
				RemoveTimer('BuffsModuleDespawnDelay');
				AddTimer('BuffsModuleDespawnDelay', ACS_Hud_Elements_Despawn_Delay(), false);

				FactsAdd("ACS_Buffs_Module_Hide", 1, -1);
			}

			if (FactsQuerySum("ACS_WolfHeadHud_Module_Shown") > 0)
			{
				if (hudWolfHeadModule.GetEnabled())
				{
					hudWolfHeadModule.SetEnabled(false);

					hud.UpdateHUD();
				}

				FactsRemove("ACS_WolfHeadHud_Module_Shown");
			}

			if (FactsQuerySum("ACS_ItemHud_Module_Shown") > 0)
			{
				if (hudItemModule.GetEnabled())
				{
					hudItemModule.SetEnabled(false);

					hud.UpdateHUD();
				}

				FactsRemove("ACS_ItemHud_Module_Shown");
			}

			return;
		}

		if 
		(HudExceptionCheck())
		{
			if (FactsQuerySum("ACS_Minimap_Module_Hide") > 0)
			{
				RemoveTimer('MinimapModuleDespawnDelay');

				moduleMinimap.SetEnabled(true);
				hud.UpdateHUD();

				FactsRemove("ACS_Minimap_Module_Hide");
			}

			if (FactsQuerySum("ACS_Quest_Module_Hide") > 0)
			{
				RemoveTimer('QuestModuleDespawnDelay');

				moduleQuest.SetEnabled(true);
				hud.UpdateHUD();

				FactsRemove("ACS_Quest_Module_Hide");
			}

			if (FactsQuerySum("ACS_Control_Hint_Module_Hide") > 0)
			{
				RemoveTimer('ControlHintModuleDespawnDelay');

				moduleControls.SetEnabled(true);
				hud.UpdateHUD();

				FactsRemove("ACS_Control_Hint_Module_Hide");
			}

			if (FactsQuerySum("ACS_Buffs_Module_Hide") > 0)
			{
				RemoveTimer('BuffsModuleDespawnDelay');

				moduleBuffs.SetEnabled(true);
				hud.UpdateHUD();

				FactsRemove("ACS_Buffs_Module_Hide");
			}
		}
		else
		{
			if ( FactsQuerySum("ACS_Minimap_Module_Hide") <= 0 )
			{
				RemoveTimer('MinimapModuleDespawnDelay');
				AddTimer('MinimapModuleDespawnDelay', ACS_Hud_Elements_Despawn_Delay(), false);

				FactsAdd("ACS_Minimap_Module_Hide", 1, -1);
			}

			if ( FactsQuerySum("ACS_Quest_Module_Hide") <= 0 )
			{
				RemoveTimer('QuestModuleDespawnDelay');
				AddTimer('QuestModuleDespawnDelay', ACS_Hud_Elements_Despawn_Delay(), false);

				FactsAdd("ACS_Quest_Module_Hide", 1, -1);
			}

			if ( FactsQuerySum("ACS_Control_Hint_Module_Hide") <= 0 )
			{
				RemoveTimer('ControlHintModuleDespawnDelay');
				AddTimer('ControlHintModuleDespawnDelay', ACS_Hud_Elements_Despawn_Delay(), false);

				FactsAdd("ACS_Control_Hint_Module_Hide", 1, -1);
			}

			if ( FactsQuerySum("ACS_Buffs_Module_Hide") <= 0 )
			{
				RemoveTimer('BuffsModuleDespawnDelay');
				AddTimer('BuffsModuleDespawnDelay', ACS_Hud_Elements_Despawn_Delay(), false);

				FactsAdd("ACS_Buffs_Module_Hide", 1, -1);
			}
		}

		if (ACS_can_refresh_hud())
		{
			ACS_refresh_hud_cooldown();

			if 
			(HudExceptionCheck()
			)
			{
				hudWolfHeadModule.SetAlwaysDisplayed(true);
				hudWolfHeadModule.SetEnabled(true);
	
				if (FactsQuerySum("ACS_WolfHeadHud_Module_Hide") > 0)
				{
					RemoveTimer('WolfHeadHudModuleDespawnDelay');

					if (FactsQuerySum("ACS_WolfHeadHud_Module_Shown") > 0)
					{
						FactsRemove("ACS_WolfHeadHud_Module_Shown");
					}

					FactsRemove("ACS_WolfHeadHud_Module_Hide");
				}
				else if (FactsQuerySum("ACS_WolfHeadHud_Module_Hide") <= 0)
				{
					if (!hudWolfHeadModule.GetEnabled())
					{
						FactsAdd("ACS_WolfHeadHud_Module_Hide", 1, -1);
					}
				}

				hudItemModule.SetAlwaysDisplayed(true);
				hudItemModule.SetEnabled(true);

				if (FactsQuerySum("ACS_ItemHud_Module_Hide") > 0)
				{
					RemoveTimer('ItemHudModuleDespawnDelay');

					if (FactsQuerySum("ACS_ItemHud_Module_Shown") > 0)
					{
						FactsRemove("ACS_ItemHud_Module_Shown");
					}

					FactsRemove("ACS_ItemHud_Module_Hide");
				}
				else if (FactsQuerySum("ACS_ItemHud_Module_Hide") <= 0)
				{
					if (!hudItemModule.GetEnabled())
					{
						FactsAdd("ACS_ItemHud_Module_Hide", 1, -1);
					}
				}
			}
			else
			{
				if ( FactsQuerySum("ACS_WolfHeadHud_Module_Hide") <= 0 )
				{
					RemoveTimer('WolfHeadHudModuleDespawnDelay');

					if (FactsQuerySum("ACS_WolfHeadHud_Module_Shown") <= 0)
					{
						FactsAdd("ACS_WolfHeadHud_Module_Shown", 1, -1);
					}

					AddTimer('WolfHeadHudModuleDespawnDelay', ACS_Hud_Elements_Despawn_Delay(), false);

					FactsAdd("ACS_WolfHeadHud_Module_Hide", 1, -1);
				}

				if 
				(FactsQuerySum("ACS_WolfHeadHud_Module_Shown") > 0 
				)
				{
					hudWolfHeadModule.SetAlwaysDisplayed(true);
					hudWolfHeadModule.SetEnabled(true);
				}

				if ( FactsQuerySum("ACS_ItemHud_Module_Hide") <= 0 )
				{
					RemoveTimer('ItemHudModuleDespawnDelay');

					if (FactsQuerySum("ACS_ItemHud_Module_Shown") <= 0)
					{
						FactsAdd("ACS_ItemHud_Module_Shown", 1, -1);
					}

					AddTimer('ItemHudModuleDespawnDelay', ACS_Hud_Elements_Despawn_Delay(), false);

					FactsAdd("ACS_ItemHud_Module_Hide", 1, -1);
				}

				if 
				(FactsQuerySum("ACS_ItemHud_Module_Shown") > 0 
				)
				{
					hudItemModule.SetAlwaysDisplayed(true);
					hudItemModule.SetEnabled(true);
				}
			}

			hud.UpdateHUD();
		}
	}

