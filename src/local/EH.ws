		if (FactsQuerySum("ACS_Mask_Enabled") > 0
		&& !ACS_Armor_Equipped_Check()
		)
		{
			if ( GetWitcherPlayer().IsAnyItemEquippedOnSlot(EES_Armor))
			{
				Facegear_Include_Startup();
