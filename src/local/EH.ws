	private var transformationWolfMeshComp 																		: CComponent;
	private var transformationWolfAnimComp 																		: CAnimatedComponent;

	private var transformationWolfScale 																		: float;

	default transformationWolfScale 																			= 1.1875;

	public function ResetTransformationWolfSize()
	{
		transformationWolfScale -= transformationWolfScale;
		transformationWolfScale = 1.1875;
	}

	public timer function GrowTransformationWolfTimer ( dt : float, id : int)
	{ 
		if (transformationWolfScale >= 1.5)
		{
			ACSGetCActor('ACS_Transformation_Werewolf').AddTag('ACS_Transformation_Werewolf_Mega_Sized');
			RemoveTimer('GrowTransformationWolfTimer');

			ACSGetCActor('ACS_Transformation_Werewolf').DestroyEffect('morph_fx');
				
			ACSGetCActor('ACS_Transformation_Werewolf').DestroyEffect('glow');
			ACSGetCActor('ACS_Transformation_Werewolf').PlayEffectSingle('glow');
		}
		else
		{
			GrowTransformationWolfActual();
		}	
	} 

	public timer function ShrinkTransformationWolfTimer ( dt : float, id : int)
	{ 
		if (transformationWolfScale <= 1.1875)
		{
			ACSGetCActor('ACS_Transformation_Werewolf').RemoveTag('ACS_Transformation_Werewolf_Mega_Sized');
			RemoveTimer('ShrinkTransformationWolfTimer');
		}
		else
		{
			ShrinkTransformationWolfActual();
		}	
	} 

	function GrowTransformationWolfActual()
	{
		transformationWolfMeshComp = ACSGetCActor('ACS_Transformation_Werewolf').GetComponentByClassName('CMeshComponent');

		transformationWolfAnimComp = (CAnimatedComponent)ACSGetCActor('ACS_Transformation_Werewolf').GetComponentByClassName('CAnimatedComponent');

		if (transformationWolfScale >= 1.5)
		{
			ACSGetCActor('ACS_Transformation_Werewolf').AddTag('ACS_Transformation_Werewolf_Mega_Sized');
			RemoveTimer('GrowTransformationWolfTimer');

			ACSGetCActor('ACS_Transformation_Werewolf').DestroyEffect('morph_fx');
				
			ACSGetCActor('ACS_Transformation_Werewolf').DestroyEffect('glow');
			ACSGetCActor('ACS_Transformation_Werewolf').PlayEffectSingle('glow');
		}
		else
		{
			transformationWolfMeshComp.SetScale(Vector(
				
			transformationWolfScale += 0.00078125,
			transformationWolfScale += 0.00078125,
			transformationWolfScale += 0.00078125
	
			));

			transformationWolfAnimComp.SetScale(Vector(
				
			transformationWolfScale += 0.00078125,
			transformationWolfScale += 0.00078125,
			transformationWolfScale += 0.00078125
	
			));
		}
	}

	function ShrinkTransformationWolfActual()
	{
		transformationWolfMeshComp = ACSGetCActor('ACS_Transformation_Werewolf').GetComponentByClassName('CMeshComponent');

		transformationWolfAnimComp = (CAnimatedComponent)ACSGetCActor('ACS_Transformation_Werewolf').GetComponentByClassName('CAnimatedComponent');

		if (transformationWolfScale <= 1.1875)
		{
			ACSGetCActor('ACS_Transformation_Werewolf').RemoveTag('ACS_Transformation_Werewolf_Mega_Sized');
			RemoveTimer('ShrinkTransformationWolfTimer');
		}
		else
		{
			transformationWolfMeshComp.SetScale(Vector(
				
			transformationWolfScale -= 0.00078125,
			transformationWolfScale -= 0.00078125,
			transformationWolfScale -= 0.00078125
	
			));

			transformationWolfAnimComp.SetScale(Vector(
				
			transformationWolfScale -= 0.00078125,
			transformationWolfScale -= 0.00078125,
			transformationWolfScale -= 0.00078125
	
			));
		}
	}

	private var werewolf_roar_index_1																									: int;
	default werewolf_roar_index_1 																										= 0;

	private var previous_werewolf_roar_index_1																							: int;
	default previous_werewolf_roar_index_1 																								= 0;

	function Transformation_Werewolf_Roar()
	{
		werewolf_roar_index_1 = RandDifferent(this.previous_werewolf_roar_index_1 , 3);

		switch (werewolf_roar_index_1) 
		{	
			case 2:
			ACSTransformWerewolfPlayAnim( 'monster_werewolf_taunt_counter', 0.25f, 0.325f);
			break;
			
			case 1:
			ACSTransformWerewolfPlayAnim( 'monster_werewolf_taunt_02', 0.25f, 0.325f);
			break;
			
			default:
			ACSTransformWerewolfPlayAnim( 'monster_werewolf_taunt_01', 0.25f, 0.325f);
			break;
		}

		this.previous_werewolf_roar_index_1 = werewolf_roar_index_1;

		RemoveTimer('WerewolfBerserkModeDeactivate');
		AddTimer('WerewolfBerserkModeDeactivate', 20, false);

		AddTimer('GrowTransformationWolfTimer', 0.02, true);

		ACSGetCActor('ACS_Transformation_Werewolf').PlayEffectSingle('pre_sonar');
		ACSGetCActor('ACS_Transformation_Werewolf').StopEffect('pre_sonar');

		ACSGetCActor('ACS_Transformation_Werewolf').PlayEffectSingle('sonar_ready');
		ACSGetCActor('ACS_Transformation_Werewolf').StopEffect('sonar_ready');

		ACSGetCActor('ACS_Transformation_Werewolf').PlayEffectSingle('sonar');
		ACSGetCActor('ACS_Transformation_Werewolf').StopEffect('sonar');

		ACSGetCActor('ACS_Transformation_Werewolf').PlayEffectSingle('special_force_l');
		ACSGetCActor('ACS_Transformation_Werewolf').StopEffect('special_force_l');

		ACSGetCActor('ACS_Transformation_Werewolf').PlayEffectSingle('special_force_r');
		ACSGetCActor('ACS_Transformation_Werewolf').StopEffect('special_force_r');

		ACSGetCActor('ACS_Transformation_Werewolf').PlayEffectSingle('attack_special');
		ACSGetCActor('ACS_Transformation_Werewolf').StopEffect('attack_special');
		
		ACSGetCActor('ACS_Transformation_Werewolf').PlayEffectSingle('smash_ground');
		ACSGetCActor('ACS_Transformation_Werewolf').StopEffect('smash_ground');

		ACSGetCActor('ACS_Transformation_Werewolf').DestroyEffect('glow');

		ACSGetCActor('ACS_Transformation_Werewolf').StopEffect('him_smoke_swirl_black');
