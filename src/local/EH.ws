				ArrayOfIdsAppend( allItems, items3 );
				ArrayOfIdsAppend( allItems, items4 );
				ArrayOfIdsAppend( allItems, items5 );
				ArrayOfIdsAppend( allItems, items6 );

				for ( i = 0; i < allItems.Size(); i += 1 )
