	function ACS_Werewolf_Move_Controls()
	{
		if (thePlayer.IsInCombat())
		{
			if (thePlayer.GetStat(BCS_Toxicity) < thePlayer.GetStatMax(BCS_Toxicity))
			{
				thePlayer.GainStat(BCS_Toxicity, (thePlayer.GetStatMax(BCS_Toxicity) - thePlayer.GetStat(BCS_Toxicity)) * 0.00006125);
			}
			
			thePlayer.DrainVitality(thePlayer.GetStat(BCS_Vitality) * 0.000030625);
		}
		else
		{
			if (thePlayer.GetStat(BCS_Toxicity) < thePlayer.GetStatMax(BCS_Toxicity))
			{
				thePlayer.GainStat(BCS_Toxicity, (thePlayer.GetStatMax(BCS_Toxicity) - thePlayer.GetStat(BCS_Toxicity)) * 0.000030625);
			}
			
			thePlayer.DrainVitality(thePlayer.GetStat(BCS_Vitality) * 0.0000153125);
		}

		ACSGetCActor('ACS_Transformation_Werewolf').GetMovingAgentComponent().EnableCombatMode( true );

		ACSGetCActor('ACS_Transformation_Werewolf').GetMovingAgentComponent().SetVirtualRadius( 'CombatCharacterRadius' );

		if (!ACSGetCActor('ACS_Transformation_Werewolf').IsEffectActive('blood', false))
		{
			ACSGetCActor('ACS_Transformation_Werewolf').PlayEffectSingle( 'blood' );
		}

		((CNewNPC)ACSGetCActor('ACS_Transformation_Werewolf')).SetBehaviorVariable( 'additiveTauntOn', 1, true );

		if (thePlayer.IsInCombat())
		{
			if (thePlayer.GetTarget())
			{
				((CNewNPC)ACSGetCActor('ACS_Transformation_Werewolf')).SetBehaviorVectorVariable( 'lookAtTarget', ((CActor)(thePlayer.GetTarget())).GetWorldPosition() );
			}
			else
			{
				((CNewNPC)ACSGetCActor('ACS_Transformation_Werewolf')).SetBehaviorVectorVariable( 'lookAtTarget', ACSGetCEntity('acs_lookat_entity').GetWorldPosition() );
			}

			((CNewNPC)ACSGetCActor('ACS_Transformation_Werewolf')).SetBehaviorVariable( 'lookatOn', 1, true );
		}
		else
		{
			((CNewNPC)ACSGetCActor('ACS_Transformation_Werewolf')).SetBehaviorVectorVariable( 'lookAtTarget', ACSGetCEntity('acs_lookat_entity').GetWorldPosition() );

			((CNewNPC)ACSGetCActor('ACS_Transformation_Werewolf')).SetBehaviorVariable( 'lookatOn', 1, true );
		}

		if (ACSGetCActor('ACS_Transformation_Werewolf').GetMovingAgentComponent().GetRelativeMoveSpeed() <= 0.1 )
		{
			if
			(
				theInput.GetLastActivationTime( 'GI_AxisLeftX' ) > 1.25f 
				|| theInput.GetLastActivationTime( 'GI_AxisLeftY' ) > 1.25f 
			)	
			{
				ACSGetCActor('ACS_Transformation_Werewolf').RemoveTag('ACS_Werewolf_Stationary_Transition');
			}
			else
			{
				RemoveTimer('Werewolf_Remove_Stationary_Tag');

				if (!ACSGetCActor('ACS_Transformation_Werewolf').HasTag('ACS_Werewolf_Stopped_Moving'))
				{
					ACSGetCActor('ACS_Transformation_Werewolf').AddTag('ACS_Werewolf_Stationary_Transition');

					ACSGetCActor('ACS_Transformation_Werewolf').AddTag('ACS_Werewolf_Stopped_Moving');
				}
			}
		}

		if (thePlayer.IsDodgeTimerRunning()
		|| thePlayer.IsCurrentlyDodging() )
		{
			return;
		}

		if (theInput.GetActionValue('GI_AxisLeftX') == 0 && theInput.GetActionValue('GI_AxisLeftY') == 0 )
		{
			ACSGetCActor('ACS_Transformation_Werewolf').GetMovingAgentComponent().ForceSetRelativeMoveSpeed( 0.1 );
			ACSGetCActor('ACS_Transformation_Werewolf').GetMovingAgentComponent().SetGameplayRelativeMoveSpeed( 0.1 );
		}
		else
		{
			if (theInput.GetActionValue('GI_AxisLeftY') > 0.1 && theInput.GetActionValue('GI_AxisLeftX') == 0 )
			{
				WerewolfRestoreRotation();

				WerewolfChangeStance();

				if (!ACSGetCActor('ACS_Transformation_Werewolf').HasTag('ACS_Werewolf_Stationary_Transition')
				)
				{
					ACSTransformWerewolfMovementAdjust('forward');
				}

				if (
				theInput.IsActionPressed('Sprint')
				)
				{
					ACSGetCActor('ACS_Transformation_Werewolf').GetMovingAgentComponent().SetGameplayRelativeMoveSpeed(2); 
				}
				else
				{
					ACSGetCActor('ACS_Transformation_Werewolf').GetMovingAgentComponent().SetGameplayRelativeMoveSpeed(1); 
				}
			}
			else if (theInput.GetActionValue('GI_AxisLeftY') < -0.1 && theInput.GetActionValue('GI_AxisLeftX') == 0 )
			{
				WerewolfRestoreRotation();

				if (!ACSGetCActor('ACS_Transformation_Werewolf').HasTag('ACS_Werewolf_Stationary_Transition')
				)
				{
					if (thePlayer.IsInCombat())
					{
						ACSTransformWerewolfMovementAdjust('forward');
					}
					else
					{
						ACSTransformWerewolfMovementAdjust('backward');
					}
				}

				if (thePlayer.IsInCombat())
				{
					if (!ACSGetCActor('ACS_Transformation_Werewolf').HasTag('ACS_Directional_Change_Anim'))
					{
						RemoveTimer('Werewolf_Change_Stance_Backward');

						RemoveTimer('Werewolf_Change_Stance_Forward');

						AddTimer('Werewolf_Change_Stance_Backward', 0.25f, false);

						ACSTransformWerewolfPlayAnim('monster_werewolf_dodge_b01', 0.5f, 0.5f);

						ACSGetCActor('ACS_Transformation_Werewolf').AddTag('ACS_Directional_Change_Anim');
					}

					ACSGetCActor('ACS_Transformation_Werewolf').GetMovingAgentComponent().SetGameplayRelativeMoveSpeed(1); 
				}
				else
				{
					WerewolfChangeStance();

					if (
					theInput.IsActionPressed('Sprint')
					)
					{
						ACSGetCActor('ACS_Transformation_Werewolf').GetMovingAgentComponent().SetGameplayRelativeMoveSpeed(2); 
					}
					else
					{
						ACSGetCActor('ACS_Transformation_Werewolf').GetMovingAgentComponent().SetGameplayRelativeMoveSpeed(1); 
					}
				}
			}
