	function ACS_Transformation_Vampire_Monster_Move_Controls()
	{
		var dmg 						: W3DamageAction;
		var vampRot, adjustedRot 		: EulerAngles;

		if (thePlayer.IsInCombat())
		{
			if (thePlayer.GetStat(BCS_Toxicity) < thePlayer.GetStatMax(BCS_Toxicity))
			{
				thePlayer.GainStat(BCS_Toxicity, (thePlayer.GetStatMax(BCS_Toxicity) - thePlayer.GetStat(BCS_Toxicity)) * 0.00006125);
			}
			
			thePlayer.DrainVitality(thePlayer.GetStat(BCS_Vitality) * 0.000030625);
		}
		else
		{
			if (thePlayer.GetStat(BCS_Toxicity) < thePlayer.GetStatMax(BCS_Toxicity))
			{
				thePlayer.GainStat(BCS_Toxicity, (thePlayer.GetStatMax(BCS_Toxicity) - thePlayer.GetStat(BCS_Toxicity)) * 0.000030625);
			}
			
			thePlayer.DrainVitality(thePlayer.GetStat(BCS_Vitality) * 0.0000153125);
		}

		ACSGetCActor('ACS_Transformation_Vampire_Monster').GetMovingAgentComponent().EnableCombatMode( true );

		ACSGetCActor('ACS_Transformation_Vampire_Monster').GetMovingAgentComponent().SetVirtualRadius( 'CombatCharacterRadius' );

		((CNewNPC)ACSGetCActor('ACS_Transformation_Vampire_Monster')).SetBehaviorVariable( 'additiveTauntOn', 1, true );

		if (thePlayer.IsInCombat())
		{
			if (thePlayer.GetTarget())
			{
				((CNewNPC)ACSGetCActor('ACS_Transformation_Vampire_Monster')).SetBehaviorVectorVariable( 'lookAtTarget', ((CActor)(thePlayer.GetTarget())).GetWorldPosition() );
			}
			else
			{
				((CNewNPC)ACSGetCActor('ACS_Transformation_Vampire_Monster')).SetBehaviorVectorVariable( 'lookAtTarget', ACSGetCEntity('acs_lookat_entity').GetWorldPosition() );
			}

			((CNewNPC)ACSGetCActor('ACS_Transformation_Vampire_Monster')).SetBehaviorVariable( 'lookatOn', 1, true );
		}
		else
		{
			((CNewNPC)ACSGetCActor('ACS_Transformation_Vampire_Monster')).SetBehaviorVectorVariable( 'lookAtTarget', ACSGetCEntity('acs_lookat_entity').GetWorldPosition() );

			((CNewNPC)ACSGetCActor('ACS_Transformation_Vampire_Monster')).SetBehaviorVariable( 'lookatOn', 1, true );
		}

		if (ACSGetCActor('ACS_Transformation_Vampire_Monster').HasTag('ACS_Vampire_Monster_Ground_Mode'))
		{
			if (ACSGetCActor('ACS_Transformation_Vampire_Monster').HasTag('ACS_Vampire_Monster_Flight_Mode_Controls_Active'))
			{
				RemoveTimer('Vampire_Monster_Bat_Swarm');

