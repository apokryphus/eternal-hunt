	private saved var catActionID 		: int;
	private saved var cat_l_aiTree		: CAIFollowSideBySideAction;
	
	function CatApproachController()
	{
		var actors 											: array<CActor>;
		var i												: int;
		var targetDistance									: float;

		actors.Clear();

		actors = thePlayer.GetNPCsAndPlayersInRange( 20, 20, 'cat', FLAG_OnlyAliveActors);

		if( actors.Size() > 0 )
		{
			for( i = 0; i < actors.Size(); i += 1 )
			{
				targetDistance = VecDistanceSquared2D( thePlayer.GetWorldPosition(), actors[i].GetWorldPosition() );

				if(targetDistance <= 7*7
				)
				{
					if ( !actors[i].HasTag('ACS_Cat_Enthralled') )
					{
						cat_l_aiTree = new CAIFollowSideBySideAction in actors[i];
						cat_l_aiTree.OnCreated();
						cat_l_aiTree.params.targetTag = 'PLAYER';
						cat_l_aiTree.params.moveSpeed = 6;
						cat_l_aiTree.params.teleportToCatchup = true;

						catActionID = actors[i].ForceAIBehavior(cat_l_aiTree, BTAP_Emergency);

						actors[i].AddTag('ACS_Cat_Enthralled');
					}
				}
				else if(targetDistance > 7*7 )
				{
					if ( actors[i].HasTag('ACS_Cat_Enthralled') )
					{
						actors[i].CancelAIBehavior(catActionID);
						delete cat_l_aiTree;

						actors[i].RemoveTag('ACS_Cat_Enthralled');
					}
				}
			}
		}
	}

	function Guiding_Light_Navigation_Guide()
	{
		var ent																: ACSNavigationGuide;
		var rot, cameraRot 													: EulerAngles;
		var pos																: Vector;

		if (theGame.IsFocusModeActive()
		&& theGame.GetFocusModeController().CanUseFocusMode()
		&& thePlayer.IsOnGround()
		&& FactsQuerySum("ACS_Wisp_Released") > 0
		)
		{
			if (!ACSGetCEntity('ACS_Guiding_Light_Navigation_Guide')
			&& FactsQuerySum("ACS_Guiding_Light_Navigation_Guide_Spawned") <= 0
			)
			{
				if (thePlayer.IsUsingHorse()
				|| thePlayer.IsUsingVehicle()
				)
				{
					pos = ACSFixZAxis(theCamera.GetCameraPosition() + theCamera.GetCameraDirection() * 15);
				}
				else
				{
					if (thePlayer.GetIsSprinting())
					{
						pos = ACSFixZAxis(theCamera.GetCameraPosition() + theCamera.GetCameraDirection() * 10);
					}
					else
					{
						if (thePlayer.GetIsWalking())
						{
							pos = ACSFixZAxis(theCamera.GetCameraPosition() + theCamera.GetCameraDirection() * 7.5);
						}
						else
						{
							pos = ACSFixZAxis(theCamera.GetCameraPosition() + theCamera.GetCameraDirection() * 5);
						}
					}
				}

				rot = thePlayer.GetWorldRotation();

				cameraRot = theCamera.GetCameraRotation();

				rot.Yaw = cameraRot.Yaw;
				rot.Pitch = 0;
				rot.Roll = 0;

				ent = (ACSNavigationGuide)theGame.CreateEntity( 

				(CEntityTemplate)LoadResource( 
					
				"dlc\dlc_acs\data\entities\other\navigation_guide.w2ent"
				
				, true ), 
				
				ACSFixZAxis(pos), 

				rot );

				ent.AddTag('ACS_Guiding_Light_Navigation_Guide');

				FactsAdd("ACS_Guiding_Light_Navigation_Guide_Spawned", 1, -1);
			}
		}
		else
		{
			if (ACSGetCEntity('ACS_Guiding_Light_Navigation_Guide')
			&& FactsQuerySum("ACS_Guiding_Light_Navigation_Guide_Spawned") > 0
			)
			{
				ACSGetCEntity('ACS_Guiding_Light_Navigation_Guide').Destroy();

				FactsRemove("ACS_Guiding_Light_Navigation_Guide_Spawned");
			}
		}
	}

