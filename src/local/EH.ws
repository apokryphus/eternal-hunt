	function ACS_IsDisplayTargetInFrontOfToad() : bool
	{
		var attackRange, attackAngle 	: float;

		attackRange = 50;

		attackAngle = 60;

		actors.Clear();

		actors = ACSGetCActor('ACS_Transformation_Toad').GetNPCsAndPlayersInCone(attackRange, VecHeading(ACSGetCActor('ACS_Transformation_Toad').GetHeadingVector()), attackAngle, 20, , FLAG_ExcludePlayer + FLAG_OnlyAliveActors );

		if( actors.Size() > 0 )
		{
			for( i = 0; i < actors.Size(); i += 1 )
			{
				actortarget = (CActor)actors[i];

				if (actortarget == ((CActor)(thePlayer.GetDisplayTarget()))
				)
				{
					return true;
				}
			}
		}

		return false;
	}
	
	function ACS_IsDisplayTargetToTheRightOfToad() : bool
	{
		var attackRange, attackAngle 	: float;

		attackRange = 50;

		attackAngle = 60;

