	function FocusModeOverlapCheck() : bool
	{
		if (theGame.GetFocusModeController().IsActive())
		{
			return false;
		}

		if (theInput.IsActionJustReleased('Focus'))
		{
			return false;
		}

		if (theInput.GetActionValue('Focus') > 0)
		{
			return false;
		}

		if (theInput.GetActionValue('Focus') < 0)
		{
			return false;
		}

		return true;	
	}
	
	
