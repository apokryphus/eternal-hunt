	function Rainbow_Control()
	{
		var teleportPos : Vector;
		var teleportRot : EulerAngles;

		if (
		(
		GetWeatherConditionName() == 'WT_Clear' 
		)
		&& !thePlayer.IsInInterior()
		&& !ACS_IsNight()
		)
		{
			if ( FactsQuerySum("ACS_Rainbow_Active") <= 0 )
			{
				if (!ACSGetCEntity('acs_spiral_rainbow_entity').IsEffectActive('rainbow', false))
				{
					ACSGetCEntity('acs_spiral_rainbow_entity').PlayEffectSingle('rainbow');
				}

				teleportPos = ACSPlayerFixZAxis(theCamera.GetCameraPosition() + VecFromHeading(theCamera.GetCameraHeading()) *  RandRangeF(750, 250));

				teleportRot = thePlayer.GetWorldRotation();

				teleportRot.Yaw += RandRangeF( 135, 90 );

				ACSGetCEntity('acs_spiral_rainbow_entity').TeleportWithRotation(teleportPos, teleportRot);

				RemoveTimer('RainbowRemove');
				AddTimer('RainbowRemove', 300, false);

				FactsAdd("ACS_Rainbow_Active", 1, -1);
			}
		}
		else
		{
			if (FactsQuerySum("ACS_Rainbow_Active") > 0)
			{
				ACSGetCEntity('acs_spiral_rainbow_entity').DestroyEffect('rainbow');

				RemoveTimer('RainbowRemove');

				FactsRemove("ACS_Rainbow_Active");
			}
		}
	}

