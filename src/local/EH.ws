					if (((CMovingPhysicalAgentComponent)(actortarget.GetMovingAgentComponent())).GetCapsuleHeight() >= 2
					|| actortarget.GetRadius() >= 0.7
					|| actortarget.HasAbility('Boss')
					|| actortarget.HasTag('IsBoss')
					)
