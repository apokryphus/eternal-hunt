		var boneRotation															: EulerAngles;

		if (thePlayer.IsInGameplayScene()
		|| theGame.IsFading()
		|| theGame.IsBlackscreen()
		)
		{
			return false;
		}

		if (thePlayer.HasBuff(EET_AirDrain)
		|| thePlayer.HasBuff(EET_Choking)
		|| thePlayer.HasBuff(EET_Drowning)
		)
		{
			return false;
		}

		if (
		ACS_Movement_Prevention()
