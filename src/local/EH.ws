			GeraltWolfLightAttack();
		}
		else if (ACS_Bear_School_Check())
		{
			GeraltBearLightAttack();
		}
		else if (ACS_Cat_School_Check())
		{
			GeraltCatLightAttack();
		}
		else if (ACS_Griffin_School_Check())
		{
			GeraltGriffinLightAttack();
