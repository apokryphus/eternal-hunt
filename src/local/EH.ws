	var vACS_Ghost_Stance_Switch : cACS_Ghost_Stance_Switch;

	function Ghost_Stance_Control()
	{
		var moveTargets 	: array<CActor>;
		var i 				: int;
		
		if (thePlayer.HasTag('ACS_Ghost_Stance_Active')
		&& !ACSGetCEntity('ACS_Dual_Wield_L_Sword_Steel')
		&& !ACSGetCEntity('ACS_Dual_Wield_L_Sword_Silver')
		)
		{
			thePlayer.DrainStamina( ESAT_FixedValue,  thePlayer.GetStatMax( BCS_Stamina ), 0.5 );

			moveTargets.Clear();
			moveTargets = thePlayer.GetMoveTargets();
					
			for( i = 0; i < moveTargets.Size(); i += 1 )
			{
				moveTargets[i].SignalGameplayEvent( 'InterruptChargeAttack' );
			}

			if (!ACSGetCEntity('ACS_Ghost_Sword_Ent'))
			{
				ACS_Tutorial_Display_Check('ACS_Gwynbleidd_Stance_Tutorial_Shown');

				DisableCatViewFx( 0 );

				EnableCatViewFx( 0.5f );

				SetTintColorsCatViewFx(Vector(0.1f,0.1f,0.1f,0.5f),Vector(1.0f,0.0f,0.0f,0.5f),0.95f);

				SetBrightnessCatViewFx(5.0f);

				SetViewRangeCatViewFx(5000.0f);

				SetPositionCatViewFx( Vector(0,0,0,0) , true );	

				SetHightlightCatViewFx( Vector(1.0f,0.1f,0.1f,0.5f),0.5f,500);

				SetFogDensityCatViewFx( 0 );

				vACS_Ghost_Stance_Switch = new cACS_Ghost_Stance_Switch in this;
	
				vACS_Ghost_Stance_Switch.ACS_Ghost_Stance_Switch_Activate_Engage();

				ACSCreateGhostSwordFX();
			}

			if( thePlayer.GetStat( BCS_Focus ) < thePlayer.GetStatMax( BCS_Focus )/3
			|| theGame.IsDialogOrCutscenePlaying() 
			|| thePlayer.IsInNonGameplayCutscene() 
			|| thePlayer.IsInGameplayScene() 
			|| theGame.IsCurrentlyPlayingNonGameplayScene()
			|| theGame.IsFading()
			|| theGame.IsBlackscreen()
			|| !thePlayer.IsThreatened()
			|| !thePlayer.IsAnyWeaponHeld() 
			|| thePlayer.IsWeaponHeld('fist') 
			|| thePlayer.HasTag('acs_vampire_claws_equipped')
			|| thePlayer.HasTag('acs_aard_sword_equipped') 
			|| thePlayer.HasTag('acs_aard_secondary_sword_equipped') 
			|| thePlayer.HasTag('acs_quen_secondary_sword_equipped') 
			|| thePlayer.HasTag('acs_yrden_sword_equipped') 
			|| thePlayer.HasTag('acs_yrden_secondary_sword_equipped') 
			|| thePlayer.HasTag('acs_quen_sword_equipped') 
			|| thePlayer.HasTag('acs_axii_sword_equipped') 
			|| thePlayer.HasTag('acs_axii_secondary_sword_equipped') 
			|| thePlayer.HasTag('acs_sorc_fists_equipped')
			|| thePlayer.IsUsingHorse() 
			|| thePlayer.IsUsingVehicle()
			|| thePlayer.IsSwimming()
			|| thePlayer.IsDiving()
			) 
			{
				if (ACSGetCEntity('ACS_Ghost_Sword_Ent'))
				{
					DisableCatViewFx( 2.5f );

					ACSGetCEntity('ACS_Ghost_Sword_Ent').Destroy();
				}

				vACS_Ghost_Stance_Switch = new cACS_Ghost_Stance_Switch in this;

				vACS_Ghost_Stance_Switch.ACS_Ghost_Stance_Switch_Deactivate_Engage();
				
				thePlayer.RemoveTag('ACS_Ghost_Stance_Active');
			}
		}
	}

