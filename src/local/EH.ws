		{
			thePlayer.GetRootAnimatedComponent().PlaySlotAnimationAsync( 'man_fistfight_hit_knockdown_f_getup_exploration_1', 'PLAYER_SLOT', SAnimatedComponentSlotAnimationSettings(0, 0.5) );

