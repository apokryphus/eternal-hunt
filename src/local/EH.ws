		//thePlayer.SoundEvent("monster_werewolf_vo_taunt1");
		//thePlayer.SoundEvent("monster_werewolf_vo_taunt1");

		thePlayer.SoundEvent("monster_werewolf_vo_taunt2");
		thePlayer.SoundEvent("monster_werewolf_vo_taunt2");
		//thePlayer.SoundEvent("monster_werewolf_vo_taunt2");
		//thePlayer.SoundEvent("monster_werewolf_vo_taunt2");
		//thePlayer.SoundEvent("monster_werewolf_vo_taunt2");

		thePlayer.DrainFocus( thePlayer.GetStatMax( BCS_Focus ) );

