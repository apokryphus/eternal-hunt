	function BotchlingResize()
	{
		var meshcomp														: CComponent;
		var animcomp														: CAnimatedComponent;
		var h 																: float;

		if (!ACSGetCActor('ACS_Botchling'))
		{
			return;
		}

		if (!ACSGetCActor('ACS_Botchling').HasTag('ACS_Botchling_Resize_Start'))
		{
			ACSGetCActor('ACS_Botchling').PlayEffect('fx_quest_q103');
			ACSGetCActor('ACS_Botchling').StopEffect('fx_quest_q103');

			ACSGetCActor('ACS_Botchling').PlayEffect('appear_fx');
			ACSGetCActor('ACS_Botchling').PlayEffect('morph_fx');

			ACSGetCActor('ACS_Botchling').StopEffect('appear_fx');
			ACSGetCActor('ACS_Botchling').StopEffect('morph_fx');

			ACSGetCActor('ACS_Botchling').SetVisibility( false );

			AddTimer('BotchlingGrowTimer', 0.01, true);

			ACSGetCActor('ACS_Botchling').AddTag('ACS_Botchling_Resize_Start');
		}
	}

	private var botchlingScale 																		: float;

	default botchlingScale 																			= 1;

	public timer function BotchlingGrowTimer ( dt : float, id : int)
	{ 
		if (botchlingScale >= 2)
		{
			ACSGetCActor('ACS_Botchling').DestroyEffect('appear_fx');
			ACSGetCActor('ACS_Botchling').DestroyEffect('morph_fx');

			ACSGetCActor('ACS_Botchling').PlayEffect('appear_fx');
			ACSGetCActor('ACS_Botchling').PlayEffect('morph_fx');

			ACSGetCActor('ACS_Botchling').StopEffect('appear_fx');
			ACSGetCActor('ACS_Botchling').StopEffect('morph_fx');

			ACSGetCActor('ACS_Botchling').AddTag('ACS_Botchling_Resize_Complete');

			ACSGetCActor('ACS_Botchling').SetVisibility( true );

			RemoveTimer('BotchlingGrowTimer');
		}
		else
		{
			BotchlingGrowActual();
		}	
	}

