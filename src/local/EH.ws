		thePlayer.SetIsCurrentlyDodging(false);

		ACSGetCActor('ACS_Transformation_Black_Wolf').EnableCharacterCollisions(true);

		ACSGetCActor('ACS_Transformation_Black_Wolf').StopEffect('shadows_form');
	}

