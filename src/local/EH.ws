		if( FactsQuerySum( "tut_in_dark_place" ) )
		{
			return true;
		}
		
		GetActiveAreaEnvironmentDefinitions( envs );
		
		if( envs.Contains( 'env_novigrad_cave' ) 
		|| envs.Contains( 'cave_catacombs' ) 
		|| envs.Contains( 'env_novigrad_cave_dark' ) 
		|| envs.Contains( 'env_novigrad_cave_fog_1' ) 
		|| envs.Contains( 'env_novigrad_cave_red_water' ) 
		|| envs.Contains( 'env_novigrad_cave_simpa' ) 
		|| envs.Contains( 'env_novigrad_cave_blizzard' ) 
		|| envs.Contains( 'env_skellige_sq209_02' ) 
		|| envs.Contains( 'env_spiral_snow_hour_6_22_cave' ) 
		|| envs.Contains( 'cave_catacombs_ft' ) 
		|| envs.Contains( 'env_novigrad_cave_frogarena' ) 
		)
		{
			return true;
		}
		
		return false;
	}

