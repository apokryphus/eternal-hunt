			&& GetWitcherPlayer().IsActionAllowed(EIAB_Dodge)
			&& !GetWitcherPlayer().IsInAir()
			&& GetWitcherPlayer().IsActionAllowed(EIAB_Movement)
			&& GetWitcherPlayer().IsActionAllowed(EIAB_LightAttacks)
			&& !ACS_Transformation_Activated_Check()
