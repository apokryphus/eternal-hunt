		{
			ACSGetCEntity('ACS_Sparagmos_Effect').StopEffect('sword_slash_blue_large');
			ACSGetCEntity('ACS_Sparagmos_Effect').PlayEffectSingle('sword_slash_blue_large');
		}

		if (thePlayer.HasTag('acs_vampire_claws_equipped'))
		{
			if (thePlayer.IsUsingHorse()
			|| thePlayer.IsUsingVehicle()
			|| !ACS_Enabled()
			//|| !thePlayer.HasTag('ACS_ExplorationDelayTag')
			)
			{
				ClawDestroy();

				if (!ACS_HideVampireClaws_Enabled())
				{
					thePlayer.PlayEffectSingle('claws_effect');
					thePlayer.StopEffect('claws_effect');
				}
			}

			theGame.GetBehTreeReactionManager().CreateReactionEventIfPossible( thePlayer, 'CastSignAction', -1, 10.0f, -1.f, -1, true );

			if (ACSGetCEntity('acs_vampire_back_claw'))
			{
				if (!ACS_DodgeEffects_Enabled())
				{
					ACSGetCEntity('acs_vampire_back_claw').Destroy();
				}
			}

			if (thePlayer.HasBuff(EET_BlackBlood))
			{
				thePlayer.StopEffect('blood_color');
				thePlayer.PlayEffectSingle('blood_color');

				if (ACSGetCEntity('acs_helm_1'))
				{
					ACSGetCEntity('acs_helm_1').PlayEffectSingle('blood_color');
					ACSGetCEntity('acs_helm_1').StopEffect('blood_color');
				}

				if (ACSGetCEntity('acs_helm_2'))
				{
					ACSGetCEntity('acs_helm_2').PlayEffectSingle('blood_color');
					ACSGetCEntity('acs_helm_2').StopEffect('blood_color');
				}

				if (ACSGetCEntity('acs_helm_3'))
				{
					ACSGetCEntity('acs_helm_3').PlayEffectSingle('blood_color');
					ACSGetCEntity('acs_helm_3').StopEffect('blood_color');
				}

				if (ACSGetCEntity('acs_helm_4'))
				{
					ACSGetCEntity('acs_helm_4').PlayEffectSingle('blood_color');
					ACSGetCEntity('acs_helm_4').StopEffect('blood_color');
				}

				if (ACSGetCEntity('ACS_Eredin_Skirt'))
				{
					ACSGetCEntity('ACS_Eredin_Skirt').PlayEffectSingle('blood_color');
					ACSGetCEntity('ACS_Eredin_Skirt').StopEffect('blood_color');
				}

				if (ACSGetCEntity('ACS_Eredin_Cloak'))
				{
					ACSGetCEntity('ACS_Eredin_Cloak').PlayEffectSingle('blood_color');
					ACSGetCEntity('ACS_Eredin_Cloak').StopEffect('blood_color');
				}

				if (ACSGetCEntity('ACS_VGX_Eredin_Cloak'))
				{
					ACSGetCEntity('ACS_VGX_Eredin_Cloak').PlayEffectSingle('blood_color');
					ACSGetCEntity('ACS_VGX_Eredin_Cloak').StopEffect('blood_color');
				}

				if (ACSGetCEntity('ACS_Imlerith_Skirt'))
				{
					ACSGetCEntity('ACS_Imlerith_Skirt').PlayEffectSingle('blood_color');
					ACSGetCEntity('ACS_Imlerith_Skirt').StopEffect('blood_color');
				}
				
				ACSGetCEntity('acs_vampire_head').PlayEffectSingle('blood_color');

				ACSGetCEntity('acs_vampire_head').StopEffect('blood_color');

				if (!thePlayer.HasTag('ACS_blood_armor'))
				{
					ACS_BloodArmorStandalone();
				}
			}
			else
			{
				ACS_Blood_Armor_Destroy_Without_Back_Claw_IMMEDIATE();
			}
		}
		else if (thePlayer.HasTag('acs_sorc_fists_equipped'))
		{
			if (thePlayer.IsUsingHorse()
			|| thePlayer.IsUsingVehicle()
			|| !ACS_Enabled()
			)
			{
				SorcFistDestroy();
			}
		}
		else if (thePlayer.HasTag('acs_aard_sword_equipped'))
		{
			ACSGetEquippedSword().StopAllEffects();
		}

		if (thePlayer.HasTag('ACS_Ice_Giant_Mode'))
		{
			if (thePlayer.IsAnyWeaponHeld() && !thePlayer.IsWeaponHeld('fist'))
			{
				if (!ACSGetCEntity('ACS_Frost_Sword_Ent'))
				{
					ACSCreateFrostSwordFX();
				}
