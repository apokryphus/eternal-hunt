				movementAdjustorNPC.AdjustmentDuration( ticketNPC, 0.5 );
				movementAdjustorNPC.MaxRotationAdjustmentSpeed( ticketNPC, 50000 );

				dmg = new W3DamageAction in theGame.damageMgr;
				
