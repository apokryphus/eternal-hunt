	function ACS_Transformation_Vampiress_Dash()
	{
		if( BruxaDashCallTime + DOUBLE_TAP_WINDOW >= theGame.GetEngineTimeAsSeconds() )
		{
			BruxaDashDoubleTap = true;
		}
		else
		{
			BruxaDashDoubleTap = false;	
		}
		
		if( BruxaDashDoubleTap )
		{
			if (ACS_can_transformation_dodge())
			{
				ACS_refresh_transformation_dodge_cooldown();

				thePlayer.RemoveTag('ACS_Transformation_Vampiress_Is_Moving');

				ACSVampiressRemoveMoveTimers();

				vampiress_dodge_timer_actual();

				if (ACSGetCActor('ACS_Transformation_Vampiress').HasTag('ACS_Transformation_Bruxa'))
				{
					if (ACSGetCActor('ACS_Transformation_Vampiress').IsEffectActive('shadowdash', false))
					{
						ACSGetCActor('ACS_Transformation_Vampiress').DestroyEffect('shadowdash');

						thePlayer.RemoveTag('ACS_Transformation_Bruxa_Cloaked');
					}
					else
					{
						ACSGetCActor('ACS_Transformation_Vampiress').DestroyEffect('shadowdash');
						ACSGetCActor('ACS_Transformation_Vampiress').PlayEffectSingle('shadowdash');

						thePlayer.AddTag('ACS_Transformation_Bruxa_Cloaked');
					}
				}
				else
				{
					ACSGetCActor('ACS_Transformation_Vampiress').PlayEffectSingle('shadowdash_cs701_2');
					ACSGetCActor('ACS_Transformation_Vampiress').StopEffect('shadowdash_cs701_2');
				}

				ACSTransformVampiressMovementAdjust('normaldash');

				if (thePlayer.IsInCombat())
				{
					ACS_StaminaDrain(5, true);
				}
			}
		}

		BruxaDashCallTime = theGame.GetEngineTimeAsSeconds();
	}
				
