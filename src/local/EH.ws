	event OnSpawned( spawnData : SEntitySpawnData )
	{
		this.CreateAttachment( thePlayer );	
		
		ACS_INIT_FUNCTION();

		ACS_Addon_States();

		this.PushState('ACS_BARADDUR');
	}

	function ACS_INIT_FUNCTION()
	{
		if(!thePlayer.IsCiri())
		{
			AddTimer('ACS_Init_Delay', 1, false);
			
			if(ACS_Enabled())
			{
				ACS_Startup_Entity_Spawner();

				ACS_Player_RemoveTags();

				BehSwitchINIT();

				ACS_Init_Timers();

				register_extra_inputs();

				MimicReset();

				FactsCheck();

				ACS_Load_Sound();

				GetACSRoachStash();

				//ACS_MonsterHunt = new ACSMonsterHuntChallenge in this;

				//ACS_MonsterHunt.init();

				thePlayer.SetWalkToggle( true );	
			}
		}
	}

