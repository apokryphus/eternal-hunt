				if (
					((CActor)(ents[i])).GetInventory().IsIdValid( ((CActor)(ents[i])).GetInventory().GetItemFromSlot('r_weapon') )
					|| ((CActor)(ents[i])).GetInventory().IsIdValid( ((CActor)(ents[i])).GetInventory().GetItemFromSlot('l_weapon') )
